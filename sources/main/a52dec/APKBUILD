# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=a52dec
pkgver=0.7.4
pkgrel=6
pkgdesc="A free library for decoding ATSC A/52 streams."
url="http://liba52.sourceforge.net/"
arch="all"
license="GPL2+"
subpackages="$pkgname-dev $pkgname-doc"
depends=""
makedepends="autoconf automake libtool linux-headers"
source="http://liba52.sourceforge.net/files/a52dec-$pkgver.tar.gz
	automake.patch
	$pkgname-$pkgver-build.patch"

_builddir="$srcdir"/a52dec-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	update_config_sub || return 1
	libtoolize --force && \
		aclocal && autoconf && automake --add-missing
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-shared \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	install -m644 liba52/a52_internal.h "$pkgdir"/usr/include/a52dec/ || return 1
}

